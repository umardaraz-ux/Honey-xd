<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="180dp"
    android:layout_height="170dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        app:cardCornerRadius="15dp">



        <ImageView
            android:id="@+id/saladimage"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/img"/>

        <androidx.cardview.widget.CardView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="35dp"
            app:cardCornerRadius="55dp"
            android:layout_gravity="center_horizontal">

            <TextView
                android:id="@+id/pricetag"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#d42c2c"
                android:text="14K"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="10dp"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/foodnames"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Salad With Shirata"
            android:layout_marginTop="90dp"
            android:textStyle="bold"
            android:textSize="10dp"
            android:layout_gravity="center_horizontal"/>

        <ImageView
            android:id="@+id/staring"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:src="@drawable/starxd"
            android:layout_marginTop="75dp"
            android:layout_marginLeft="15dp"/>

        <TextView
            android:id="@+id/ratingstext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4.0"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginTop="105dp"
            android:layout_marginLeft="90dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="65dp">

            <TextView
                android:id="@+id/distanceorkm"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_marginLeft="20dp"
                android:textSize="10dp"
                android:layout_marginBottom="5dp"
                android:text="1 km" />

            <androidx.cardview.widget.CardView
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="6dp"
                app:cardBackgroundColor="#F35D20"
                app:cardCornerRadius="35dp" />

            <TextView
                android:id="@+id/timeofdelivery"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:textSize="10dp"
                android:layout_marginLeft="7dp"
                android:text="10 min delivery" />


        </LinearLayout>
    </androidx.cardview.widget.CardView>
